{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Edge (macos)",
      "type": "msedge",
      "request": "launch",
      // Change this to whatever port your jellyfin-web dev server runs on
      "url": "http://localhost:8080",
      // Optional: Set your workspace root to jellyfin-web folder
      "webRoot": "${workspaceFolder}/src",
      // Make sure it launches Edge on macOS
      "runtimeExecutable": "/Applications/Microsoft Edge.app/Contents/MacOS/Microsoft Edge",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--auto-open-devtools-for-tabs" // Useful to auto-open DevTools on start
      ],
      "sourceMaps": true
    },
    {
      "name": "Edge (windows)",
      "type": "msedge",
      "request": "launch",
      // Change this to whatever port your jellyfin-web dev server runs on
      "url": "http://localhost:8080",
      // Optional: Set your workspace root to jellyfin-web folder
      "webRoot": "${workspaceFolder}/src",
      // Make sure it launches Edge on macOS
      "runtimeExecutable":  "C:\\Program Files (x86)\\Microsoft\\Edge\\Application\\msedge.exe",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--auto-open-devtools-for-tabs", // Useful to auto-open DevTools on start
        "--devtools-flags=--window"  // Force DevTools into undocked window
      ],
      "sourceMaps": true
    }
  ]
}
